    ViewData["Title"] = "Home Page";
}

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">Volunteer Management</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item"><a class="nav-link" href="#">Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Volunteers</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Events</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Reports</a></li>
            <li class="nav-item"><a class="nav-link btn btn-outline-light" href="#">Login</a></li>
        </ul>
    </div>
</nav>

<!-- Hero Section -->
<header class="jumbotron text-center bg-light mt-4">
    <h1 class="display-4">Welcome to Volunteer Management</h1>
    <p class="lead">Manage volunteers, events, and reports efficiently</p>
    <a href="#" class="btn btn-primary btn-lg">Get Started</a>
</header>

<!-- Dashboard Section -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Volunteers</h5>
                    <p class="card-text display-4 text-primary">150</p>
                    <a href="#" class="btn btn-outline-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Events</h5>
                    <p class="card-text display-4 text-success">5</p>
                    <a href="#" class="btn btn-outline-success">View Events</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Pending Applications</h5>
                    <p class="card-text display-4 text-danger">8</p>
                    <a href="#" class="btn btn-outline-danger">Review Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

